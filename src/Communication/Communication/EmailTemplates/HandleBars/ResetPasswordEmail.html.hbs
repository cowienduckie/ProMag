{{#>BasicHtmlLayout}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-1 col-md-1 col-sm-1">
            </div>
            <div class="col-10 col-md-10 col-sm-10 DivCenter">
                <div class="DivHead"></div>
                <div class="entry-page-title">StepOne</div>
                <div class="DivCenter"></div>
                <div class="BorderContent">
                    <div class="DivCenter"></div>
                    <div class="DivContent">
                        <h1 class="FontH1">You have requested to reset your password</h1>
                        <span class="FontSpan"></span>
                        <h6 style="text-align:left">Hello {{ UserName }},</h6>
                        <p class="FontP">
                            We cannot simply send you your old password. A unique link to reset your password has been
                            generated for you. To reset your password, click the following link and follow the
                            instructions.
                        </p>
                        <a href="{{ ResetPasswordLink }}" class="btnReset">Reset Password</a>
                        <div>
                            <hr>
                        </div>
                        <div style="height:10px"></div>
                        <p class="FontPFooter">
                            If you've having trouble clicking the "Reset Password" button,copy and paste the URL below
                            into your web browser
                        </p>
                        <a class="WordBreak" href="{{ ResetPasswordLink }}">{{ ResetPasswordLink }}</a>
                    </div>

                    <div style="height:40px"></div>
                </div>
                <div style="height:20px"></div>
                <div>
                    <p class="FontPEnd">Powered by <strong>StepOne Team</strong></p>
                </div>

            </div>
            <div class="col-1 col-md-1 col-sm-1">
            </div>
        </div>
    </div>
{{/BasicHtmlLayout}}
