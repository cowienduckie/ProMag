{{#>BasicHtmlLayout}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-1 col-md-1 col-sm-1">
            </div>
            <div class="col-10 col-md-10 col-sm-10 DivCenter">
                <div class="DivHead"></div>
                <div class="entry-page-title">StepOne</div>
                <div class="DivCenter"></div>
                <div class="BorderContent">
                    <div class="DivCenter"></div>
                    <div class="DivContent">
                        <h1 class="FontH1">Welcome to your new StepOne Account</h1>
                        <span class="FontSpan"></span>
                        <h6 style="text-align:left">Hello {{ FullName }},</h6>
                        <p class="FontP">
                            Your login account is : <b>{{ UserName}}</b>

                        </p>
                        <p class="FontP">
                            To confirm your registration please click on the button given below. This option expires in
                            <b>24</b> hours.
                        </p>
                        <a href="{{ ActivateUrl }}" class="btnReset">Confirm Account</a>
                        <div>
                            <hr>
                        </div>
                        <div style="height:10px"></div>
                        <p class="FontPFooter">
                            If you've having trouble clicking the "Confirm Account" button,copy and paste the URL below
                            into your web browser
                        </p>
                        <a class="WordBreak" href="{{ ActivateUrl }}">{{ ActivateUrl }}</a>
                    </div>

                    <div style="height:40px"></div>
                </div>
                <div style="height:20px"></div>
                <div>
                    <p class="FontPEnd">Powered by <strong>StepOne Team</strong></p>
                </div>

            </div>
            <div class="col-1 col-md-1 col-sm-1">
            </div>
        </div>
    </div>
{{/BasicHtmlLayout}}
