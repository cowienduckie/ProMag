<body class="default-theme">
<div class="page-wrapper">
    <div class="entry-page">
        <div class="row entry-page-layout">
            <div class="col-6 entry-page-hero-img forgot-hero-img">
                <div class="entry-page-logo"></div>
            </div>
            <div class="col-6 entry-page-content">
                <div class="entry-page-title-hint">Request for reset password</div>
                <div class="entry-page-title">ProMag</div>
                <div class="entry-page-form">
                    <div class="form-title">Forget password</div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-content">
                        <form asp-action="ForgetPassword">
                            <div class="form-group">
                                <div class="input-group flex-nowrap input-group-icon">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="addon-email">
                                            <em class="material-icons-outlined">email</em>
                                        </span>
                                    </div>
                                    <input name="Email" type="email" class="form-control" placeholder="Your Email" aria-label="Email"
                                           aria-describedby="addon-email">
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block" name="button" value="resetPassword">Email Link</button>
                            </div>
                        </form>
                        <br>
                        <div class="form-group">
                            <div>Wait I remember my password,<a asp-controller="Account" asp-action="Login">Log in</a> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>