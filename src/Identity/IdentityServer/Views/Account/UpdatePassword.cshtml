@model IdentityServer.Models.Account.InputPasswordViewModel
<body class="default-theme">
<div class="page-wrapper">
    <div class="entry-page">
        <div class="row entry-page-layout">
            <div class="col-6 entry-page-hero-img register-hero-img">
                <div class="entry-page-logo"></div>
            </div>
            <div class="col-6 entry-page-content">
                <div class="entry-page-title">ProMag</div>
                <div class="entry-page-form">
                    <div class="form-title">Enter your new password below.</div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="UpdatePassword">
                        <input type="hidden" asp-for="Token"/>
                        <input type="hidden" asp-for="UserId"/>
                        <input type="hidden" asp-for="TokenPurpose"/>
                        <div class="form-content">
                            <div class="form-group">
                                <div class="input-group flex-nowrap input-group-icon">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="addon-email">
                                            <i class="material-icons-outlined">U</i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control" readonly asp-for="UserName" placeholder="Email" aria-label="Email" aria-describedby="addon-email">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group flex-nowrap input-group-icon">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="addon-password">
                                            <i class="material-icons-outlined">lock</i>
                                        </span>
                                    </div>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Password"
                                           aria-describedby="addon-password">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group flex-nowrap input-group-icon">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="addon-confirm-password">
                                            <i class="material-icons-outlined">lock</i>
                                        </span>
                                    </div>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="ConfirmPassword" aria-label="Password"
                                           aria-describedby="addon-password">

                                </div>
                            </div>
                            <div class="form-group">
                                <button name="button" class="btn btn-primary btn-block">Submit</button>
                            </div>
                        </div>
                    </form>
                    <br/>
                    <div class="form-group">
                        <div>Already have account?<a asp-controller="Account" asp-action="Login">Log in</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>